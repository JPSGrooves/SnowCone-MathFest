{
  "name": "snowcone-mathfest",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "ðŸŽ‰ SnowCone MathFest, a neon-powered time-traveling math experience",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode web",
    "build:native": "vite build --mode ios && npx cap copy ios && npx cap sync ios",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "live": "npm run build && npm run deploy",
    "reset": "sudo chown -R $USER node_modules && rm -rf dist node_modules package-lock.json && npm install",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prepare": "husky && husky install",
    "test:mt": "NODE_ENV=test node --import ./scripts/dom-shim.mjs ./scripts/mt_golden_test.mjs"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "math",
    "festival",
